{"ferryman" :
  [{
  "poolName": "MyWebSite",
  "domain": "www.domain.co.za",
  "ctxRoot": "",
  "serveOn": {"hostname":"localhost", "httpPort":80, "httpsPort":null},
  "members" :
  [
    {"host":"localhost",  "port":"8081",  "relCtxRoot": null  },
    {"host":"localhost",  "port":"8082",  "relCtxRoot": null  },
    {"host":"localhost",  "port":"8083",  "relCtxRoot": null  },
    {"host":"localhost",  "port":"8084",  "relCtxRoot": "/v1" }
  ]
  ,
  "rules":
    [
      {
        "type":"FORWARD",
        "apply" :
        [
          { "from": ["/path/to/forward/from1", "/path/to/forward/from2"], "to": "/path/to/forward/to" },
          { "from": ["/path/to/forward*"], "to": "/path/to/forward/to"}
        ]
      },
      {
        "type":"TEMP_REDIRECT",
        "apply" :
        [
          {"from": ["/path/to/redirect/from"], "to": "/path/to/new/resource"},
          {"from": ["/path/to/redirect*"], "to": "/path/to/new/resource"}
        ]
      },
      {
        "type":"PERM_REDIRECT",
        "apply" :
        [
          {"from": ["/path/to/redirect/from/perm"], "to": "/path/to/new/resource"},
          {"from": ["/path/to/redirect*"], "to": "/path/to/new/resource"}
        ]
      },
      {
        "type":"DROP",
        "apply" :
        [
          {"from": ["/path/to/drop1", "/path/to/drop2*"], "to": null}
        ]
      }
    ]
  }
]}
